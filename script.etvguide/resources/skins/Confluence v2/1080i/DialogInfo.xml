<window>
	<defaultcontrol always="true">1000</defaultcontrol>
	<coordinates>
		<system>1</system><posx>278</posx><posy>158</posy>
	</coordinates>
	<animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
	<animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
	<include>dialogeffect</include>
	<controls>
		<control type="group">
			<include>VisibleFadeEffect</include>
			<control type="image">
				<description>background image</description>
				<posx>0</posx>
				<posy>0</posy>
				<width>1365</width>
				<height>765</height>
				<texture border="40">dialogs/dialogback.png</texture>
			</control>
			<control type="image">
				<description>Dialog Header image</description>
				<posx>40</posx>
				<posy>16</posy>
				<width>1245</width>
				<height>60</height>
				<texture>dialogs/dialogheader.png</texture>
			</control>
			<control type="label">
				<description>header label</description>
				<posx>40</posx>
				<posy>20</posy>
				<width>1245</width>
				<height>45</height>
				<font>font13_title</font>
				<label>$ADDON[script.etvguide 58000]</label>
				<align>center</align>
				<aligny>center</aligny>
				<textcolor>FFEB9E17</textcolor>
				<shadowcolor>black</shadowcolor>
			</control>
			<control type="button" id="1000">
				<description>Close Window button</description>
				<posx>1245</posx>
				<posy>15</posy>
				<width>96</width>
				<height>48</height>
				<onclick>Dialog.Close(VideoOSD,true)</onclick>
				<onclick>FullScreen</onclick>
				<texturefocus>DialogCloseButton-focus.png</texturefocus>
				<texturenofocus>DialogCloseButton.png</texturenofocus>
				<animation effect="fade" time="200">VisibleChange</animation>
				<visible>true</visible>
			</control>
			<control type="label" id="4920">
				<description>Program title</description>
				<posx>45</posx>
				<posy>82</posy>
				<width>705</width>
				<height>50</height>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font13</font>
				<aligny>center</aligny>
				<scroll>true</scroll>
			</control>
			<control type="image" id="4924">
				<description>Channel logo</description>
				<posx>960</posx>
				<posy>195</posy>
				<width>360</width>
				<height>180</height>
				<aspectratio>keep</aspectratio>
				<fadetime>500</fadetime>
			</control>
			<control type="image" id="4944">
				<description>Live</description>
				<posx>1000</posx>
				<posy>107</posy>
				<width>120</width>
				<height>27</height>
				<aspectratio>keep</aspectratio>
				<fadetime>500</fadetime>
				<visible>true</visible>
			</control>
			<control type="label">
				<description>Current time</description>
				<posx>1170</posx>
				<posy>129</posy>
				<width>150</width>
				<height>75</height>
				<textcolor>gray</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[B]$INFO[System.Time(hh:mm)][/B]</label>
				<font>font13</font>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="label">
				<description>Current time - sec</description>
				<posx>1252</posx>
				<posy>132</posy>
				<width>75</width>
				<height>75</height>
				<textcolor>gray</textcolor>
				<shadowcolor>black</shadowcolor>
				<label>[B]:$INFO[System.Time(ss)][/B]</label>
				<font>font10</font>
				<align>left</align>
				<aligny>center</aligny>
			</control>
			<control type="label" id="4921">
				<description>Program time</description>
				<posx>1135</posx>
				<posy>82</posy>
				<width>210</width>
				<height>75</height>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font13</font>
				<align>left</align>
				<aligny>center</aligny>	
			</control>
			<control type="textbox" id="4922">
				<description>Program description</description>
				<posx>45</posx>
				<posy>150</posy>
				<width>875</width>
				<height>545</height>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font12</font>
				<align>left</align>
				<wrapmultiline>true</wrapmultiline>
				<autoscroll time="3500" delay="2500" repeat="10000">true</autoscroll>
			</control>
			<control type="label" id="4921">
				<description>Program time</description>
				<posx>1135</posx>
				<posy>82</posy>
				<width>210</width>
				<height>75</height>
				<textcolor>white</textcolor>
				<shadowcolor>black</shadowcolor>
				<font>font13</font>
				<align>left</align>
				<aligny>center</aligny>	
			</control>
			<control type="image" id="4923">
				<description>Program logo</description>
				<posx>960</posx>
				<posy>390</posy>
				<width>360</width>
				<height>330</height>
				<aspectratio>keep</aspectratio>
				<fadetime>500</fadetime>
				<texture>tvguide-logo-epg.png</texture>
			</control>
			<control type="progress" id="4999">
				<posx>45</posx>
				<posy>710</posy>
				<width>870</width>
				<height>20</height>
			</control>
		</control>
	</controls>
</window>