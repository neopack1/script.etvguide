		<system>1</system><posx>320</posx><posy>210</posy>
	</coordinates>
	<animation effect="fade" start="0" end="200" time="500">WindowOpen</animation>
	<animation effect="fade" start="200" end="0" time="250">WindowClose</animation>
	<controls>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>640</width>
			<height>300</height>
			<texture>tvguide-glasspane.png</texture>
		</control>
		<control type="image">
			<posx>0</posx>
			<posy>0</posy>
			<width>640</width>
			<height>300</height>
			<texture>tvguide-glasspane.png</texture>
		</control>
		<control type="label" id="4000">
			<posx>0</posx>
			<posy>20</posy>
			<width>640</width>
			<height>70</height>
			<textcolor>yellow</textcolor>
			<font>font12</font>
			<align>center</align>
			<label>[B]$ADDON[script.mtvguide 30700][/B]</label>
			<wrapmultiline>true</wrapmultiline>
