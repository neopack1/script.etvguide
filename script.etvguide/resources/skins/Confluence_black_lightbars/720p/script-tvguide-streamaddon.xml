			<viewtype label="list">list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>1</focusposition>
			<itemlayout width="200" height="200">
				<control type="image">
					<posx>36</posx>
					<posy>18</posy>
					<width>128</width>
					<height>128</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>10</posx>
					<posy>160</posy>
					<width>180</width>
					<height>22</height>
					<font>font12</font>
					<textcolor>gray</textcolor>
					<align>center</align>
					<info>ListItem.Label</info>
				</control>
			</itemlayout>
			<focusedlayout width="200" height="200">
				<control type="image">
					<width>200</width>
					<height>200</height>
					<posx>0</posx>
					<posy>0</posy>
					<visible>Control.HasFocus(1000)</visible>
					<texture>../../Default/media/addon-focus.png</texture>
				</control>
				<control type="image">
					<posx>36</posx>
					<posy>18</posy>
					<width>128</width>
					<height>128</height>
					<info>ListItem.Icon</info>
				</control>
				<control type="label">
					<posx>10</posx>
					<posy>160</posy>
					<width>180</width>
					<height>22</height>
					<font>font12</font>
					<align>center</align>
					<info>ListItem.Label</info>
				</control>
			</focusedlayout>
		</control>
	</controls>
