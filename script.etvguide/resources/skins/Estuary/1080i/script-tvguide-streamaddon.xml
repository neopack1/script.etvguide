			<textcolor>gray</textcolor>
			<align>center</align>
			<info>ListItem.Label</info>
		</control>
			</itemlayout>
			<focusedlayout width="200" height="200">
		<control type="image">
			<width>200</width>
			<height>200</height>
			<posx>0</posx>
			<posy>0</posy>
			<visible>Control.HasFocus(1000)</visible>
			<texture colordiffuse="FF12B2E7">addon-focus.png</texture>
		</control>
		<control type="image">
			<posx>36</posx>
			<posy>18</posy>
			<width>128</width>
			<height>128</height>
			<info>ListItem.Icon</info>
		</control>
