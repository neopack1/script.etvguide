		<system>1</system><posx>320</posx><posy>210</posy>
	</coordinates>
	<animation effect="fade" start="0" end="200" time="500">WindowOpen</animation>
	<animation effect="fade" start="200" end="0" time="250">WindowClose</animation>
	<controls>
		<!-- InfoBar -->
		<control type="image">
			<depth>DepthBars</depth>
			<left>0</left>
			<top>0</top>
			<width>2000</width>
			<height>83</height>
			<texture>dialogs/infobar.png</texture>
			<visible>!Control.IsVisible(5000)</visible>
			</control>
		<control type="image">
			<depth>DepthBars</depth>
			<left>0</left>
			<top>995</top>
			<width>2000</width>
			<height>85</height>
			<texture flipy="true">dialogs/infobar.png</texture>
			<visible>!Control.IsVisible(5000)</visible>
		</control>
		<control type="label" id="4000">
			<posx>0</posx>
			<posy>20</posy>
			<width>640</width>
			<height>70</height>
