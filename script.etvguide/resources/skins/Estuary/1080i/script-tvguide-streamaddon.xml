			<viewtype label="list">list</viewtype>
			<orientation>horizontal</orientation>
			<focusposition>1</focusposition>
			<itemlayout width="200" height="200">
		<control type="image">
			<posx>36</posx>
			<posy>18</posy>
			<width>128</width>
			<height>128</height>
			<info>ListItem.Icon</info>
		</control>
		<control type="label">
			<posx>10</posx>
			<posy>160</posy>
			<width>180</width>
			<height>22</height>
