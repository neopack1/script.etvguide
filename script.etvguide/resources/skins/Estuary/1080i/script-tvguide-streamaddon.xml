			<font>font10</font>
			<align>center</align>
			<label>[B]$ADDON[script.etvguide 30700][/B]</label>
			<wrapmultiline>true</wrapmultiline>
		</control>

		<control type="fixedlist" id="1000">
			<posx>0</posx>
			<posy>80</posy>
			<width>640</width>
			<height>200</height>
